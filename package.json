{
  "name": "delta-app-mern",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && npm install --prefix client",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:all": "npm test && npm test --prefix client",
    "format": "npx prettier --write .",
    "start": "node server",
    "server": "set NODE_ENV=dev& nodemon --inspect server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --force --prefix client && npm run build --prefix client",
    "cleanup:orphaned-reservations": "node scripts/cleanupOrphanedReservations.js",
    "validate:accounts": "node scripts/validateAccounts.js",
    "delete:kontos": "node scripts/deleteKontos.js",
    "prepare": "husky"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.7.2",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "concurrently": "^7.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "sass": "^1.57.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": "18.x"
  }
}
